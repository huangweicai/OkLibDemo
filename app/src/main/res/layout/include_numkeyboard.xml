<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_num"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/btn_goon"
    android:layout_weight="6"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <LinearLayout style="@style/layout_input_amount_style">

        <Button
            android:id="@+id/btn_1"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/btn_input_amount_style"
            android:text="3" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style">

        <Button
            android:id="@+id/btn_4"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/btn_input_amount_style"
            android:text="6" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style">

        <Button
            android:id="@+id/btn_7"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/btn_input_amount_style"
            android:text="9" />
    </LinearLayout>

    <LinearLayout style="@style/layout_input_amount_style">

        <Button
            android:id="@+id/btn_point"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:paddingBottom="20dp"
            android:text="." />

        <Button
            android:id="@+id/btn_0"
            style="@style/btn_input_amount_style"
            android:layout_marginRight="1dp"
            android:text="0" />

        <ImageButton
            android:id="@+id/btn_del"
            style="@style/btn_input_amount_style"
            android:src="@drawable/del_icon" />
    </LinearLayout>
</LinearLayout>
